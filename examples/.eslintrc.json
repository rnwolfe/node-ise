{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        // We use _ to indicate "internal use" functions.
        "no-underscore-dangle": 0,
        "radix": 0,
        // We handle error throwing using a non-returned function, an extra return false would be extraneous
        "consistent-return": 0,
        "array-callback-return": 0,
        // These are examples, logging expected.
        "no-console": 0
    }
}