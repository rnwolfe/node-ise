{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base",
        "plugin:mocha/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        // We use _ to indicate "internal use" functions.
        "array-callback-return": 0,
        "consistent-return": 0,
        "global-require": 0,
        "implicit-arrow-linebreak": 0,
        "radix": 0,
        // We handle error throwing using a non-returned function, an extra return false would be extraneous
        "no-console": 0,
        "no-undef": 0,
        "no-underscore-dangle": 0,
        "no-unused-expressions": 0,
        "mocha/no-mocha-arrows": 0
    },
    "plugins": [
        "mocha"
    ]
}